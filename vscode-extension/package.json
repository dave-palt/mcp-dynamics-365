{
  "name": "mcp-dynamics365-extension",
  "displayName": "MCP Dynamics 365 Server",
  "description": "VS Code extension for MCP Dynamics 365 server configuration (AI-generated side project)",
  "version": "2.0.0",
  "publisher": "dav3",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "mcp",
    "dynamics365",
    "crm",
    "microsoft",
    "model-context-protocol"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:workbench.action.chat.open",
    "onView:chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "dynamics365-mcp-server",
        "label": "Dynamics 365 MCP Server"
      }
    ],
    "configuration": {
      "title": "MCP Dynamics 365",
      "properties": {
        "mcpDynamics365.serverUrl": {
          "type": "string",
          "default": "http://localhost:3300/mcp",
          "description": "URL of the running MCP Dynamics 365 HTTP server"
        },
        "mcpDynamics365.httpPort": {
          "type": "number",
          "default": 3300,
          "description": "Port for the HTTP server (default: 3300)"
        },
        "mcpDynamics365.useHttpTransport": {
          "type": "boolean",
          "default": true,
          "description": "Use HTTP transport instead of stdio (recommended)"
        },
        "mcpDynamics365.serverPath": {
          "type": "string",
          "default": "npx @dav3/mcp-dynamics365-server",
          "description": "Path to the MCP Dynamics 365 server executable (used only when HTTP transport is disabled)"
        },
        "mcpDynamics365.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the MCP server when VS Code starts"
        },
        "mcpDynamics365.clientId": {
          "type": "string",
          "description": "Dynamics 365 Client ID (Azure AD App Registration)"
        },
        "mcpDynamics365.clientSecret": {
          "type": "string",
          "description": "Dynamics 365 Client Secret (Azure AD App Registration)"
        },
        "mcpDynamics365.tenantId": {
          "type": "string",
          "description": "Dynamics 365 Tenant ID (Azure AD Directory)"
        },
        "mcpDynamics365.baseUrl": {
          "type": "string",
          "description": "Dynamics 365 Base URL (e.g., https://your-org.crm.dynamics.com)"
        },
        "mcpDynamics365.resource": {
          "type": "string",
          "description": "Dynamics 365 Resource URL (usually same as Base URL)"
        },
        "mcpDynamics365.enableDevelopmentCommands": {
          "type": "boolean",
          "default": false,
          "description": "Enable development commands (Local Dev server). Set to true for development builds."
        }
      }
    },
    "commands": [
      {
        "command": "mcpDynamics365.startHttpServerLocal",
        "title": "Start HTTP Server (Local Dev)",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.startHttpServer",
        "title": "Start HTTP Server",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.stopHttpServer",
        "title": "Stop HTTP Server",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.start",
        "title": "Start MCP Dynamics 365 Server (Legacy Stdio)",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.stop",
        "title": "Stop MCP Dynamics 365 Server (Legacy Stdio)",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.restart",
        "title": "Restart MCP Dynamics 365 Server",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.configure",
        "title": "Configure MCP Dynamics 365 Server",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.restartHttpServer",
        "title": "Restart HTTP Server",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.showServerStatus",
        "title": "Show Server Status",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.openConfiguration",
        "title": "Open Configuration File",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.validateConfiguration",
        "title": "Validate Configuration",
        "category": "MCP Dynamics 365"
      },
      {
        "command": "mcpDynamics365.showOutput",
        "title": "Show Output",
        "category": "MCP Dynamics 365"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mcpDynamics365.startHttpServerLocal",
          "when": "config.mcpDynamics365.enableDevelopmentCommands"
        },
        {
          "command": "mcpDynamics365.startHttpServer"
        },
        {
          "command": "mcpDynamics365.stopHttpServer"
        },
        {
          "command": "mcpDynamics365.start"
        },
        {
          "command": "mcpDynamics365.stop"
        },
        {
          "command": "mcpDynamics365.restart"
        },
        {
          "command": "mcpDynamics365.restartHttpServer"
        },
        {
          "command": "mcpDynamics365.showServerStatus"
        },
        {
          "command": "mcpDynamics365.configure"
        },
        {
          "command": "mcpDynamics365.openConfiguration"
        },
        {
          "command": "mcpDynamics365.validateConfiguration"
        },
        {
          "command": "mcpDynamics365.showOutput"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:dev": "tsc -p ./ && node -e \"console.log('Development build completed')\"",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && npx @vscode/vsce package",
    "package:dev": "npm run compile:dev && npx @vscode/vsce package --pre-release",
    "publish": "npm run compile && npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.19.9",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dave-palt/mcp-dynamics-365.git"
  },
  "bugs": {
    "url": "https://github.com/dave-palt/mcp-dynamics-365/issues"
  },
  "homepage": "https://github.com/dave-palt/mcp-dynamics-365#readme",
  "author": "Dav3 <mcp-dynamics-365@dav3.cc>",
  "license": "MIT"
}
